#!/usr/bin/env node

var confy = require('../lib/confy');
var prompt = require('prompt');
var usage = require('data-section').getSync('usage');
var argv = process.argv;
var cmd = argv[2];
var name = argv[3];

switch (cmd) {
  case 'get':
    var res = confy.get(name);
    if (res) {
      console.log(JSON.stringify(res, null, '  '));
    }
    break;
  case 'set':
    confy.set(name);
    break;
  case 'use':
    confy.use(name);
    console.log('use profile:', name);
    break;
  case 'clean':
    prompt.start();
    prompt.get([{
      name: 'yn',
      message: 'Clean all data? [y/n]'
    }], function(err, result) {
      if (result.yn === 'y') {
        confy.clean();
        console.log('clean data');
      }
    });
    break;
  case '-v':
    console.log('confy version', confy.version);
    break;
  case '-h':
  default:
    console.log(usage);
}

/* __DATA__
@@ usage
Usage: confy [-vh] <command> <args>

commands:
   get   get _name_ setting to current profile
   set   set _name_ setting to current profile
   use   use the _name_ profile

options:
   -h    show this help
   -v    show version
__DATA__ */
